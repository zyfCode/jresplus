#jscode()
	var result = 1;
	
	function returnFalse() {
		result = 1;
	}

	function returnString() {
		result = 2;
	}
	function noReturn() {
		result = 3;
	}
	
	function beforeSubmit() {
		if (result == 1) {
    		alert("返回false来阻止表单提交");
    		return false;
		} else if (result == 2) {
    		alert("返回字符串应该不能阻止表单提交");
    		return "false";
		} else {
			alert("什么都不返回看表单提交");
		}
	}
	
	function submit() {
		Horn.getComp("testForm").submit();
	}
